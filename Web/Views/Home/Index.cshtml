<!DOCTYPE html>
<!--[if lt IE 7]>      <html lang="en" ng-app="myApp" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html lang="en" ng-app="myApp" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html lang="en" ng-app="myApp" class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en" ng-app="myApp" class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{viewTitle}} - Foo forum</title>
    <link rel="stylesheet" href="~/scripts/app/bower_components/html5-boilerplate/css/normalize.css">
    <link rel="stylesheet" href="~/scripts/app/bower_components/html5-boilerplate/css/main.css">
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap/bootstrap-custom.css" rel="stylesheet">
    <link href="~/css/common-styles.css" rel="stylesheet">
    <link href="~/css/themes.css" rel="stylesheet">
    <link href="~/css/messages.css" rel="stylesheet">
    <link href="~/css/forms.css" rel="stylesheet">
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="~/scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#themes">Foo forum</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li ng-hide="isLoggedIn"><a href="#register">Register</a></li>
                    <li ng-hide="isLoggedIn"><a href="#login">Log in</a></li>
                    <li ng-show="isLoggedIn"><p class="navbar-text">Logged in as {{userName}}</p></li>
                    <li ng-show="isLoggedIn"><a ng-click="logoff()">Log off</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <!-- Page content -->
    <div class="container">
        <div ng-view></div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - Foo forum</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/scripts/jquery-2.1.3.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/app/bower_components/angular/angular.js"></script>
    <script src="~/scripts/app/bower_components/angular-route/angular-route.js"></script>

    <script src="~/scripts/app/app.js"></script>
    <script src="~/scripts/app/services/accountService.js"></script>
    <script src="~/scripts/app/services/themesService.js"></script>
    <script src="~/scripts/app/register/register.js"></script>
    <script src="~/scripts/app/login/login.js"></script>
    <script src="~/scripts/app/themes/themes.js"></script>
    <script src="~/scripts/app/themes/themesVm.js"></script>
</body>
</html>