<body>
    <!-- Menubar -->
    <div menubar></div>

    <!-- Page content -->
    <div class="container">
        <!-- Notifications area -->
        <div class="notifications-area">
            <div class="alert alert-danger" ng-show="alert.isShown">
                <a href="javascript:void(0)" class="close" ng-click="alert.hide()">&times;</a>
                <strong>Error:</strong> {{alert.message}}
            </div>
        </div>
        <!-- Partial view -->
        <div ng-view></div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - Foo forum</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="/Client/assets/libs/jquery-2.1.3.min.js"></script>
    <script src="/Client/assets/libs/bootstrap.min.js"></script>
    <script src="/Client/assets/libs/angular/angular.min.js"></script>
